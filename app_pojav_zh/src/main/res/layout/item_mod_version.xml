<?xml version="1.0" encoding="utf-8"?>
<com.movtery.pojavzh.ui.layout.AnimConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_4sdp"
    android:background="@drawable/background_item"
    android:padding="@dimen/_8sdp">

    <ImageView
        android:id="@+id/mod_download_imageview"
        android:layout_width="32sp"
        android:layout_height="32sp"
        android:layout_marginStart="@dimen/_4sdp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_download_release"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mod_title_textview"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:ellipsize="end"
        android:textColor="@color/primary_text"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mod_download_imageview"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Mod Title" />

    <TextView
        android:id="@+id/zh_mod_download_count_textview"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Downloads: "
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mod_title_textview"
        app:layout_constraintTop_toBottomOf="@+id/mod_title_textview"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/zh_mod_modloader_textview"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Forge"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/zh_mod_download_count_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/zh_mod_download_count_textview"
        app:layout_constraintTop_toTopOf="@+id/zh_mod_download_count_textview"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/zh_mod_release_type_textview"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Release"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/zh_mod_modloader_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/zh_mod_modloader_textview"
        app:layout_constraintTop_toTopOf="@+id/zh_mod_modloader_textview"
        tools:ignore="HardcodedText" />

</com.movtery.pojavzh.ui.layout.AnimConstraintLayout>